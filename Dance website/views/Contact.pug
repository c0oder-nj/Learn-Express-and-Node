extends base.pug 

block scripts 
    script(src="/static/index.js") 

block style
    style 
        include ../static/style.css
        include ../static/cstyle.css

block content 
    div.container 
        h1 Contact Us 
        form(action="/" method="post" class="form-input")  
            input(type="text" name="name" class="name" placeholder="Enter your name")
            input(type="text" name="age" class="name" placeholder="Enter your age")
            input(type="text" name="mono" class="name" placeholder="Enter your mobile number")
            input(type="email" name="email" class="name" placeholder="Enter your email")
            input(type="text" name="query" class="name" placeholder="Enter your query")
            button(type="submit" class='btn')
                | Submit 

